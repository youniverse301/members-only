doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title
    
  body
    h1 New Message
    form(action="", method="POST")
      label(for="title") Title
      input(name="title", type="text", required)
      label(for="text") Text
      input(name="text", type="text", required)
      button(type="submit") Submit

    if errors
      ul
        each error in errors
          li= error.msg
